<h3>国</h3>


<div class="container-fluid" style="background: skyblue;font-size:20px;">
<div class="row">


  <% @countries.each do |country| %>
    <div class="col-xs-12 col-sm-6 col-md-6" style="background:orange">
    <%= image_tag country.name + '.png', :size =>'60x40' %>
<%= link_to :controller => "statics", :action => "result", :country_id => country.id do %>
    <%= country.name %>
        </div>
  <% end %>
  <% end %>
</div>
</div>
    </div>

<div class="schools-container">
  <% @schools.each do |school| %>
    <div class="school">
      <%= link_to :controller => "school", :action => "show", :id => school.id do %>
        <%= school.name %>
      <% end %>
      <%= school.country_id %>
    </div>
  <% end %>
</div>


